@model SocialBarbaWeb.Models.LoginViewModel

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-inline", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div>
        <form class="form-inline">
            <div class="form-group">
                <label for="email">
                    @Html.LabelFor(m => m.Email, new { @class = "col - sm - 2 control - label" })
                </label>
                <span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </span><br />
                <span>&nbsp;</span>
            </div>

            <div class="form-group">
                <label>
                    @Html.LabelFor(m => m.Password, new { @class = "col - sm - 2 control - label" })
                </label>
                <span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </span><br />
                <span class="pull-right">
                    @Html.ActionLink("Esqueci minha senha", "ForgotPassword")
                </span>
            </div>
            <div class="form-group">
                <input type="submit" value="ENTRAR" class="btn btn-default"><br />
                <span>&nbsp;</span>
            </div>
        </form>
</div>
}